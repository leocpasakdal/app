{
  "name": "app",
  "version": "1.0.0",
  "description": "",
  "main": "src/server/index.js",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --config=./webpack/webpack.client-prod-config.js --mode production",
    "build:dev": "webpack --config=./webpack/webpack.client-dev-config.js --mode development",
    "start": "npm run build && node src/server/index.js",
    "start:dev": "npm run build:dev && node src/server/index.js",
    "client": "webpack-dev-server --config=./webpack/webpack.client-dev-config.js  --mode development --devtool inline-source-map --hot",
    "server": "nodemon src/server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "precommit": "lint-staged",
    "prepush": "sh helpers/prepush.sh",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint .",
    "lint:ts": "eslint src/**/*.tsx",
    "lint:css": "stylelint \"./src/**/*.scss\" \"./src/**/*.css\" --syntax scss",
    "test": "node ./node_modules/jest/bin/jest.js * --watch",
    "test:once": "node ./node_modules/jest/bin/jest.js",
    "test:once:coverage": "node ./node_modules/jest/bin/jest.js -i --coverage"
  },
  "author": "leo pasakdal",
  "license": "",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "express": "^4.17.1",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-redux": "^6.0.0",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.5.2",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-react": "^7.6.3",
    "@babel/preset-typescript": "^7.6.0",
    "@types/redux-actions": "^2.6.1",
    "@typescript-eslint/eslint-plugin": "^2.5.0",
    "@typescript-eslint/parser": "^2.5.0",
    "autoprefixer": "^9.6.5",
    "awesome-typescript-loader": "^5.2.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^1.0.0",
    "concurrently": "^4.1.2",
    "cross-env": "^5.2.1",
    "css-loader": "^2.0.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-prettier": "^3.6.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.19.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-sonarjs": "^0.2.0",
    "file-loader": "^3.0.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.3.1",
    "imagemin-lint-staged": "^0.4.0",
    "jest": "^23.6.0",
    "lint-staged": "^8.2.1",
    "lodash": "^4.17.15",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.4",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.18.2",
    "prop-types": "^15.6.2",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "recompose": "^0.30.0",
    "redux-actions": "^2.6.4",
    "redux-socket.io-connect": "^0.4.2",
    "sass-loader": "^7.3.1",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.0",
    "stylelint": "^9.10.1",
    "stylelint-order": "^2.0.0",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.4",
    "url-loader": "^1.0.1",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.8.2"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{css,scss}": [
      "stylelint --syntax scss --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ],
    "*.md": [
      "prettier --tab-width 4 --write",
      "git add"
    ],
    "*.{png,jpeg,jpg,gif,svg}": [
      "imagemin-lint-staged",
      "git add"
    ]
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/helpers/setupTests.js",
    "moduleFileExtensions": [
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "^.+\\.(css|scss)$": "<rootDir>/helpers/styleMock.js",
      "^.+\\.(png|jpg|gif|svg)$": "<rootDir>/helpers/imageMock.js",
      "^#/(.*)": "<rootDir>/src/client/$1"
    },
    "notify": true,
    "resetMocks": true,
    "coveragePathIgnorePatterns": [
      "__tests__",
      "coverage/",
      "src/static",
      "helpers/",
      "webpack/"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**"
    ],
    "globals": {
      "__TEST__": true
    }
  }
}
