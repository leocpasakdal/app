{
  "name": "app",
  "version": "1.0.0",
  "description": "",
  "main": "src/server/index.js",
  "scripts": {
    "build": "webpack --config=./webpack/webpack.config.js --mode production",
    "start": "npm run build && node src/server/index.js",
    "client": "webpack-dev-server --config=./webpack/webpack.config.js  --mode development --devtool inline-source-map --hot",
    "server": "nodemon src/server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "precommit": "lint-staged",
    "prepush": "sh helpers/prepush.sh",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint .",
    "lint:css": "stylelint \"./src/**/*.scss\" \"./src/**/*.css\" --syntax scss",
    "test": "jest --watch",
    "heroku-postbuild": "npm run build"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@babel/core": "^7.0.0",
    "autoprefixer": "^9.4.6",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.2.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-polyfill": "^6.26.0",
    "babel-loader": "^8.0.0",
    "babel-core": "^7.0.0-bridge.0",    
    "clean-webpack-plugin": "^1.0.0",
    "css-loader": "^2.0.0",
    "express": "^4.16.3",
    "html-webpack-plugin": "^3.2.0",
    "postcss-loader": "^3.0.0",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-redux": "^6.0.0",
    "redux": "^4.0.1",
    "redux-socket.io-connect": "^0.4.2",
    "redux-thunk": "^2.3.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.0",
    "url-loader": "^1.0.1",
    "webpack": "^4.5.0",
    "webpack-cli": "^3.0.8"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.0",
    "babel-jest": "^23.6.0",
    "concurrently": "^4.0.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.8.0",
    "eslint": "^5.0.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.6.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.15.0",
    "eslint-plugin-jest": "^22.1.3",
    "eslint-plugin-jsx-a11y": "^6.2.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-sonarjs": "^0.2.0",
    "file-loader": "^3.0.0",
    "husky": "^1.3.1",
    "imagemin-lint-staged": "^0.4.0",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "lodash": "^4.17.11",
    "node-sass": "^4.11.0",
    "nodemon": "^1.17.3",
    "prettier": "^1.16.1",
    "prop-types": "^15.6.2",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "recompose": "^0.30.0",
    "redux-actions": "^2.6.4",
    "socket.io": "^2.2.0",
    "socket.io-client": "^2.2.0",
    "socket.io-redux": "^1.0.3",
    "stylelint": "^9.10.1",
    "stylelint-order": "^2.0.0",
    "webpack-dev-server": "^3.1.3"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{css,scss}": [
      "stylelint --syntax scss --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ],
    "*.md": [
      "prettier --tab-width 4 --write",
      "git add"
    ],
    "*.{png,jpeg,jpg,gif,svg}": [
      "imagemin-lint-staged",
      "git add"
    ]
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/helpers/setupTests.js",
    "moduleNameMapper": {
      "^.+\\.(css|scss)$": "<rootDir>/helpers/styleMock.js",
      "^.+\\.(png|jpg|gif|svg)$": "<rootDir>/helpers/imageMock.js",
      "^#/(.*)": "<rootDir>/src/client/$1"
    },
    "notify": true,
    "resetMocks": true,
    "coveragePathIgnorePatterns": [
      "__tests__",
      "src/static",
      "helpers/",
      "webpack/"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "statements": 90,
        "functions": 90,
        "lines": 90
      }
    },
    "globals": {
      "__TEST__": true
    }
  }
}
